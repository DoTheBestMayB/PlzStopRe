<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/map_fragment">

    <fragment
        android:id="@+id/map_fragment"
        android:name="com.stop.ui.map.MapFragment"
        android:label="MapFragment"
        tools:layout="@layout/fragment_map">
        <argument
            android:name="currentLocation"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null"/>
        <action
            android:id="@+id/action_map_fragment_to_place_search_fragment"
            app:destination="@id/place_search_fragment" />
        <action
            android:id="@+id/action_map_fragment_to_route_fragment"
            app:destination="@id/route_fragment" />
    </fragment>

    <fragment
        android:id="@+id/route_fragment"
        android:name="com.stop.ui.route.RouteFragment"
        android:label="fragment_route"
        tools:layout="@layout/fragment_route" >
        <argument
            android:name="routeRequest"
            app:argType="com.stop.model.route.RouteRequest" />
    </fragment>
    <fragment
        android:id="@+id/place_search_fragment"
        android:name="com.stop.ui.nearplace.PlaceSearchFragment"
        android:label="PlaceSearchFragment" >
        <action
            android:id="@+id/action_place_search_fragment_to_map_fragment"
            app:destination="@id/map_fragment" />
    </fragment>
</navigation>